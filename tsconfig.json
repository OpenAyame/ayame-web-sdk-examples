{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": false,
    "declaration": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "newLine": "LF",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["node", "webrtc", "vite/client"],
    "lib": ["dom", "esnext"],
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
